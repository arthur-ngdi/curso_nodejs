<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %> 
    <body>
        <h1><%= title %> </h1>

        <%- include('partials/navbar.ejs') %>

        <% if (typeof message !== 'undefined') { %>
            <%= message %> 
        <% } %>

        <form action = "/edit/<%= user._id %>" method = "POST">
            <div>
                <label>Nome</label>
                <input name = "name"  type = "text" placeholder = "Digite o seu nome" value = "<%= user.name %>" >
            </div>
            <div>
                <label>Idade</label>
                <input name = "age"  type = "text" placeholder = "Digite o sua idade" value = "<%= user.age %>">
            </div>
            <div>
                <label>E-mail</label>
                <input name = "email"  type = "text" placeholder = "Digite o seu e-mail" value = "<%= user.email %>">
            </div>
           
            <button type = "submit">Editar</button>
        </form>

        <%- include('partials/foot.ejs') %>

    </body>
</html>
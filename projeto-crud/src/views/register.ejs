<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %> 
    <body>
        <h1><%= title %> </h1>

        <form action = "/register/add" method = "POST">
            <div>
                <label>Nome</label>
                <input name = "name"  type = "text" placeholder = "Digite o seu nome">
            </div>
            <div>
                <label>Idade</label>
                <input name = "age"  type = "text" placeholder = "Digite o sua idade">
            </div>
            <div>
                <label>E-mail</label>
                <input name = "email"  type = "text" placeholder = "Digite o seu e-mail">
            </div>
            <div>
                <label>Senha</label>
                <input name = "password"  type = "text" placeholder = "Digite o sua senha">
            </div>
            <button type = "submit">Cadastrar</button>
        </form>

        <%- include('partials/foot.ejs') %>

    </body>
</html>